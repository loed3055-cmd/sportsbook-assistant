{
  "name": "Sportsbook Assistant",
  "build": {
    "dockerfile": "../Containerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace",
  "runArgs": [
    "--network=sportsbook-net",
    "--volume=${env:HOME}/.ssh:/root/.ssh:ro", // ðŸ”‘ mount local ssh keys read-only
    "--volume=${env:HOME}/.gitconfig:/root/.gitconfig:ro" // optional, so git user is correct
  ],
  "remoteUser": "root",
  "settings": {
    "python.defaultInterpreterPath": "/usr/local/bin/python",
    "python.analysis.extraPaths": [
      "/workspace/src"
    ],
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-azuretools.vscode-docker"
  ],
  "postCreateCommand": "make serve"
}
